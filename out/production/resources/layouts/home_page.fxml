<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>
<BorderPane fx:id="home" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.HomeController">
    <center>
        <VBox id="home-grid" spacing="20" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" maxWidth="Infinity" spacing="30" VBox.vgrow="ALWAYS">

                <HBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" styleClass="home-boxes"
                      HBox.hgrow="ALWAYS">
                    <VBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" styleClass="home-boxes-content"
                          HBox.hgrow="ALWAYS">
                        <Label styleClass="home-button-title" text="DEFINE YOUR OWN PDA BY CODE" textFill="#23aa76"/>
                        <TextArea editable="false" maxHeight="1"/>
                        <Label text="define your PDA using code!" textFill="#23aa76">
                            <padding>
                                <Insets bottom="20.0"/>
                            </padding>
                        </Label>
                        <Label mnemonicParsing="false" styleClass="home-button-icon">
                            <graphic>
                                <FontIcon iconColor="#23aa76" iconLiteral="fa-code" iconSize="114"/>
                            </graphic>
                            <padding>
                                <Insets bottom="5.0"/>
                            </padding>
                        </Label>
                        <Button onAction="#switchToQuickDefinition" styleClass="green-button-theme" text="Enter"/>
                    </VBox>
                </HBox>

                <HBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" styleClass="home-boxes"
                      HBox.hgrow="ALWAYS">
                    <VBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" styleClass="home-boxes-content"
                          HBox.hgrow="ALWAYS">
                        <Label styleClass="home-button-title" text="LOAD PDA EXAMPLES" textFill="#23aa76"/>
                        <TextArea editable="false" maxHeight="1"/>
                        <Label text="interact and test common pda machine examples!" textFill="#23aa76">
                            <padding>
                                <Insets bottom="20.0"/>
                            </padding>
                        </Label>
                        <Label mnemonicParsing="false" styleClass="home-button-icon">
                            <graphic>
                                <FontIcon iconColor="#23aa76" iconLiteral="fa-code-fork" iconSize="114"/>
                            </graphic>
                            <padding>
                                <Insets bottom="5.0"/>
                            </padding>
                        </Label>
                        <Button onAction="#switchToExamples" styleClass="green-button-theme" text="Enter"/>
                    </VBox>
                </HBox>






            </HBox>
            <HBox alignment="CENTER" maxWidth="Infinity" spacing="30" VBox.vgrow="ALWAYS">


                <HBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" styleClass="home-boxes"
                      HBox.hgrow="ALWAYS">
                    <VBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" styleClass="home-boxes-content"
                          HBox.hgrow="ALWAYS">
                        <Label styleClass="home-button-title" text="LOAD FROM YOUR LIBRARY" textFill="#23aa76"/>
                        <TextArea editable="false" maxHeight="1"/>
                        <Label text="load PDA from your library!" textFill="#23aa76">
                            <padding>
                                <Insets bottom="20.0"/>
                            </padding>
                        </Label>
                        <Label mnemonicParsing="false" styleClass="home-button-icon">
                            <graphic>
                                <FontIcon iconColor="#23aa76" iconLiteral="fa-folder-open-o" iconSize="114"/>
                            </graphic>
                            <padding>
                                <Insets bottom="5.0"/>
                            </padding>
                        </Label>
                        <Button onAction="#switchToLibrary" styleClass="green-button-theme" text="Enter"/>
                    </VBox>
                </HBox>

                <HBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" styleClass="home-boxes"
                      HBox.hgrow="ALWAYS">
                    <VBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" styleClass="home-boxes-content"
                          HBox.hgrow="ALWAYS">
                        <Label styleClass="home-button-title" text="EXPLORE PDA THEORY" textFill="#23aa76"/>
                        <TextArea editable="false" maxHeight="1"/>
                        <Label text="explore what a PDA is and how it works!" textFill="#23aa76">
                            <padding>
                                <Insets bottom="20.0"/>
                            </padding>
                        </Label>
                        <Label mnemonicParsing="false" styleClass="home-button-icon">
                            <graphic>
                                <FontIcon iconColor="#23aa76" iconLiteral="fa-book" iconSize="114"/>
                            </graphic>
                            <padding>
                                <Insets bottom="5.0"/>
                            </padding>
                        </Label>
                        <Button onAction="#switchToInfo" styleClass="green-button-theme" text="Enter"/>
                    </VBox>
                </HBox>


                <HBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" styleClass="home-boxes"
                      HBox.hgrow="ALWAYS">
                    <VBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" styleClass="home-boxes-content"
                          HBox.hgrow="ALWAYS">
                        <Label styleClass="home-button-title" text="GET HELP" textFill="#23aa76"/>
                        <TextArea editable="false" maxHeight="1"/>
                        <Label text="find out how to create your own PDA machines!" textFill="#23aa76">
                            <padding>
                                <Insets bottom="20.0"/>
                            </padding>
                        </Label>
                        <Label mnemonicParsing="false" styleClass="home-button-icon">
                            <graphic>
                                <FontIcon iconColor="#23aa76" iconLiteral="fa-question-circle-o" iconSize="114"/>
                            </graphic>
                            <padding>
                                <Insets bottom="5.0"/>
                            </padding>
                        </Label>
                        <Button onAction="#switchToHelp" styleClass="green-button-theme" text="Enter"/>
                    </VBox>
                </HBox>

                <HBox managed="false" alignment="CENTER" visible="false" maxHeight="Infinity" maxWidth="Infinity" styleClass="home-boxes"
                      HBox.hgrow="ALWAYS">
                    <VBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" styleClass="home-boxes-content"
                          HBox.hgrow="ALWAYS">
                        <Label styleClass="home-button-title" text="CREATE BY DESIGN" textFill="#23aa76"/>
                        <TextArea editable="false" maxHeight="1"/>
                        <Label text="define your PDA using design!" textFill="#23aa76">
                            <padding>
                                <Insets bottom="20.0"/>
                            </padding>
                        </Label>
                        <Label mnemonicParsing="false" styleClass="home-button-icon">
                            <graphic>
                                <FontIcon iconColor="#23aa76" iconLiteral="fa-codepen" iconSize="114"/>
                            </graphic>
                            <padding>
                                <Insets bottom="5.0"/>
                            </padding>
                        </Label>
                    </VBox>
                </HBox>

            </HBox>
            <FlowPane alignment="CENTER" prefHeight="30.0" prefWidth="200.0">
                <children>
                    <Label fx:id="lContinue" onMouseClicked="#restore" text="Continue" visible="false"/>
                </children>
            </FlowPane>
        </VBox>
    </center>
</BorderPane>
