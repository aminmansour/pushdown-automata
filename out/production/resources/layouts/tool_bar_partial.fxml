<?import javafx.scene.layout.FlowPane?>
<HBox id="tool-bar" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ToolBarPartialController">
   <FlowPane orientation="HORIZONTAL" alignment="TOP_LEFT">
    <TextFlow>
        <Text styleClass="logo-text" text="Pushdown ">
        </Text>
        <Text styleClass="logo-text" text="Automata ">
         </Text>
        <Text  styleClass="logo-text" text="Simulator">
         </Text>
    </TextFlow>
   </FlowPane>



    <HBox id="button-row" alignment="BOTTOM_RIGHT" maxWidth="Infinity" HBox.hgrow="ALWAYS">

        <Button maxHeight="Infinity" maxWidth="Infinity" fx:id="bToolbarSave" styleClass="tool-buttons" text="Save" disable="true" minWidth="90" onAction="#save" />
        <Button maxHeight="Infinity" maxWidth="Infinity" fx:id="bToolbarDeterministic" styleClass="tool-buttons" disable="true" text="Deterministic states" minWidth="90" />
        <Button maxHeight="Infinity" maxWidth="Infinity" fx:id="bToolbarStartAgain" disable="true" styleClass="tool-buttons" text="New" minWidth="90" />

    </HBox>
</HBox>
