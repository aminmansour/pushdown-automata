<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="vbPdaName" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <children>

        <HBox fx:id="hbError" alignment="BOTTOM_LEFT" prefWidth="400.0" spacing="2">
            <children>
                <Label id="lName" text="Saving Name :" textAlignment="JUSTIFY" wrapText="true">
                    <HBox.margin>
                        <Insets bottom="10.0"/>
                    </HBox.margin>
                </Label>
                <Label id="lError" text="*PDA Definition with name ready exist" textAlignment="JUSTIFY" visible="false"
                       wrapText="true"/>
            </children>
            <padding>
                <Insets top="20.0"/>
            </padding>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </HBox>
        <TextField fx:id="tfName">
            <VBox.margin>
                <Insets bottom="20.0"/>
            </VBox.margin>
        </TextField>
        <FlowPane alignment="CENTER_RIGHT" hgap="10" prefHeight="30.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="bClose" mnemonicParsing="false" styleClass="green-button-theme" text="Close"/>
                <Button fx:id="bSave" mnemonicParsing="false" styleClass="green-button-theme" text="Save and Run"/>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0"/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="20.0"/>
            </padding>
        </FlowPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
