<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:controller="controller.PDARunnerController" maxHeight="Infinity" maxWidth="Infinity" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:id="bpPDARunnerPage" >



    <left>
        <VBox fx:id="vbLeftBar" maxHeight="Infinity" maxWidth="530" minWidth="100"
              spacing="5.0" >
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
            <HBox alignment="TOP_CENTER" style="-fx-background-color: white" fx:id="transitionBox" maxWidth="Infinity"
                  VBox.vgrow="ALWAYS">
                <TableView fx:id="tvTransitionTable" HBox.hgrow="ALWAYS" maxWidth="Infinity" minWidth="500">
                    <columns>
                        <TableColumn editable="false" maxWidth="Infinity" minWidth="100" resizable="false"
                                     text="Current state"/>
                        <TableColumn editable="false" maxWidth="Infinity" minWidth="100" resizable="false"
                                     text="Element at head"/>
                        <TableColumn editable="false" maxWidth="Infinity" minWidth="100" resizable="false" text="Top of stack"/>
                        <TableColumn editable="false" maxWidth="Infinity" minWidth="100" resizable="false"
                                     text="Resulting state"/>
                        <TableColumn editable="false" maxWidth="Infinity" minWidth="100" resizable="false"
                                     text="Resulting top &#10;of stack"/>
                    </columns>

                </TableView>
                <padding>
                    <Insets bottom="10" left="10.0" right="10.0" top="10.0"/>
                </padding>

            </HBox>




        </VBox>
    </left>

    <center>

        <VBox fx:id="vbPDAInteraction" spacing="5.0" HBox.hgrow="ALWAYS">

            <HBox spacing="5" fx:id="hbCentre" VBox.vgrow="ALWAYS" maxHeight="Infinity">

                <fx:include source="pda_display_partial.fxml" HBox.hgrow="ALWAYS"/>


            </HBox>
            <BorderPane.margin>
                <Insets bottom="5.0" right="5.0" top="5.0" />
            </BorderPane.margin>
        </VBox>



    </center>

</BorderPane>
