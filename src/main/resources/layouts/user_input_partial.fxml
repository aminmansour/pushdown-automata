<VBox id="userInputPartial" maxHeight="Infinity" maxWidth="530" minWidth="100" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UserInputPartial">
   <BorderPane.margin>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </BorderPane.margin>
   <HBox alignment="TOP_CENTER" style="-fx-background-color: white" fx:id="transitionBox" maxWidth="Infinity" VBox.vgrow="ALWAYS">
      <TableView fx:id="tvTransitionTable" HBox.hgrow="ALWAYS" maxWidth="Infinity" minWidth="500" >
         <columns>
            <TableColumn editable="false" maxWidth="Infinity" minWidth="100" resizable="false" text="Current state" />
            <TableColumn editable="false" maxWidth="Infinity" minWidth="100" resizable="false" text="Element at head" />
            <TableColumn editable="false" maxWidth="Infinity" minWidth="100" resizable="false" text="Top of stack" />
            <TableColumn editable="false" maxWidth="Infinity" minWidth="100" resizable="false" text="Resulting state" />
            <TableColumn editable="false" maxWidth="Infinity" minWidth="100" resizable="false" text="Resulting top &#10;of stack" />
         </columns>

      </TableView>
      <padding>
         <Insets bottom="10" left="10.0" right="10.0" top="10.0" />
      </padding>

   </HBox>

   <HBox alignment="BOTTOM_CENTER" fx:id="userInputBox" maxWidth="Infinity">
      <children>
         <TextArea id="taInput" maxHeight="100" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
         <VBox alignment="TOP_RIGHT" maxWidth="Infinity" spacing="7.0" HBox.hgrow="ALWAYS">
            <children>
               <Button id="bInstantRun" maxHeight="1.7976931348623157E308" maxWidth="100" minWidth="100" mnemonicParsing="false" styleClass="green-button-theme" text="Instant-run" VBox.vgrow="ALWAYS">
