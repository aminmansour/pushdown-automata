<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" id="userInputPartial" maxHeight="Infinity" maxWidth="530" minWidth="100"
      spacing="5.0" xmlns="http://javafx.com/javafx/8.0.121">
    <BorderPane.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </BorderPane.margin>
    <HBox alignment="TOP_CENTER" style="-fx-background-color: white" fx:id="transitionBox" maxWidth="Infinity"
          VBox.vgrow="ALWAYS">
        <TableView fx:id="tvTransitionTable" HBox.hgrow="ALWAYS" maxWidth="Infinity" minWidth="500">
            <columns>
                <TableColumn editable="false" maxWidth="Infinity" minWidth="100" resizable="false"
                             text="Current state"/>
                <TableColumn editable="false" maxWidth="Infinity" minWidth="100" resizable="false"
                             text="Element at head"/>
                <TableColumn editable="false" maxWidth="Infinity" minWidth="100" resizable="false" text="Top of stack"/>
                <TableColumn editable="false" maxWidth="Infinity" minWidth="100" resizable="false"
                             text="Resulting state"/>
                <TableColumn editable="false" maxWidth="Infinity" minWidth="100" resizable="false"
                             text="Resulting top &#10;of stack"/>
            </columns>

        </TableView>
        <padding>
            <Insets bottom="10" left="10.0" right="10.0" top="10.0"/>
        </padding>

    </HBox>

    <HBox alignment="TOP_LEFT" spacing="5" fx:id="actionToolBar" maxWidth="Infinity">
        <Label HBox.hgrow="ALWAYS" maxWidth="Infinity" mnemonicParsing="false" styleClass="pda-action-button">
            <graphic>
                <FontIcon iconLiteral="fa-play" iconSize="20" iconColor="#25b47e"/>
            </graphic>


            <text>
                play
            </text>

            <padding>
                <Insets bottom="5" left="5" right="5" top="5"/>
            </padding>
        </Label>


        <Label HBox.hgrow="ALWAYS" maxWidth="Infinity" mnemonicParsing="false" styleClass="pda-action-button">
            <graphic>
                <FontIcon iconLiteral="fa-backward" iconSize="20" translateX="-1" iconColor="#25b47e"/>

            </graphic>

            <text>
                previous
            </text>

            <padding>
                <Insets bottom="5" left="5" right="5" top="5"/>
            </padding>
        </Label>

        <Label HBox.hgrow="ALWAYS" maxWidth="Infinity" mnemonicParsing="false" styleClass="pda-action-button">
            <graphic>
                <FontIcon iconLiteral="fa-undo" iconSize="20" iconColor="#25b47e"/>
            </graphic>

            <text>
                redo
            </text>

            <padding>
                <Insets bottom="5" left="5" right="5" top="5"/>
            </padding>
        </Label>


        <Label HBox.hgrow="ALWAYS" maxWidth="Infinity" mnemonicParsing="false" styleClass="pda-action-button">
            <graphic>
                <FontIcon iconLiteral="fa-step-backward" iconSize="20" iconColor="#25b47e"/>
            </graphic>

            <text>
                previous branch
            </text>

            <padding>
                <Insets bottom="5" left="5" right="5" top="5"/>
            </padding>
        </Label>

        <Label HBox.hgrow="ALWAYS" maxWidth="Infinity" mnemonicParsing="false" styleClass="pda-action-button">
            <graphic>
                <FontIcon iconLiteral="fa-step-forward" textAlignment="CENTER" iconSize="20" iconColor="#25b47e"/>
            </graphic>


            <text>
                next branch
            </text>

            <padding>
                <Insets bottom="5" left="5" right="5" top="5"/>
            </padding>
        </Label>

        <Label HBox.hgrow="ALWAYS" maxWidth="Infinity" mnemonicParsing="false" styleClass="pda-action-button">
            <graphic>
                <FontIcon iconLiteral="fa-stop" iconSize="20" iconColor="#25b47e"/>
            </graphic>

            <text>
                stop
            </text>

            <padding>
                <Insets bottom="5" left="5" right="5" top="5"/>
            </padding>
        </Label>

        <padding>
            <Insets bottom="6" left="10.0" right="10" top="6"/>
        </padding>
    </HBox>

    <HBox alignment="BOTTOM_CENTER" fx:id="userInputBox" maxWidth="Infinity">
        <children>
            <TextArea id="taInput" maxHeight="100" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            <VBox alignment="TOP_RIGHT" maxWidth="Infinity" spacing="7.0" HBox.hgrow="ALWAYS">
                <children>
                    <Button id="bInstantRun" maxHeight="1.7976931348623157E308" maxWidth="100" minWidth="100"
                            mnemonicParsing="false" styleClass="green-button-theme" text="Instant-run"
                            VBox.vgrow="ALWAYS">
                        <VBox.margin>
                            <Insets/>
                        </VBox.margin>
                    </Button>
                    <Button id="bStepRun" maxHeight="1.7976931348623157E308" maxWidth="100" minWidth="100"
                            mnemonicParsing="false" styleClass="green-button-theme" text="Step-run"
                            VBox.vgrow="ALWAYS"/>
                </children>
                <padding>
                    <Insets bottom="3.0" left="5.0" right="0.0"/>
                </padding>
            </VBox>
        </children>
        <padding>
            <Insets bottom="17.0" left="13.0" right="13.0" top="17.0"/>
        </padding>
    </HBox>


</VBox>
