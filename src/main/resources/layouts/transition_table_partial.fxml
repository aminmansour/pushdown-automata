<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-background-color: white" fx:id="transitionBox" maxWidth="Infinity"
      VBox.vgrow="ALWAYS">
    <TableView fx:id="tvTransitionTable" HBox.hgrow="ALWAYS" maxWidth="Infinity" minWidth="500">
        <columns>
            <TableColumn maxWidth="Infinity" minWidth="200" text="Configuration">
                <columns>
                    <TableColumn fx:id="currentState" editable="false" maxWidth="Infinity" minWidth="100"
                                 resizable="false"
                                 text="Current state"/>
                    <TableColumn fx:id="elementAtHead" editable="false" maxWidth="Infinity" minWidth="100"
                                 resizable="false"
                                 text="Element at head"/>
                    <TableColumn fx:id="topOfStack" editable="false" maxWidth="Infinity" minWidth="100"
                                 resizable="false" text="Top of stack"/>
                </columns>
            </TableColumn>
            <TableColumn maxWidth="Infinity" minWidth="200" text="Action">
                <columns>
                    <TableColumn fx:id="resultingState" editable="false" maxWidth="Infinity" minWidth="100"
                                 resizable="false"
                                 text="Resulting state"/>
                    <TableColumn fx:id="resultingTopOfStack" editable="false" maxWidth="Infinity" minWidth="100"
                                 resizable="false"
                                 text="Resulting top &#10;of stack"/>
                </columns>
            </TableColumn>
        </columns>

    </TableView>
    <padding>
        <Insets bottom="10" left="10.0" right="10.0" top="10.0"/>
    </padding>

</HBox>